<?xml version="1.0" encoding="UTF-8" ?>
<Module>
    <ModulePrefs title="Hangouts Against Humanity">
        <Require feature="rpc"/>
        <Require feature="views"/>
    </ModulePrefs>
    <Content type="html">
        <![CDATA[
        <!-- Hangout API -->
        <script src="//talkgadget.google.com/hangouts/_/api/hangout.js?v=1.3"></script>

        <!-- Analytics API -->
        <script type="text/javascript">

            var _gaq = _gaq || [];
            _gaq.push(['_setAccount', 'UA-36364793-1']);
            _gaq.push(['_trackPageview']);

            (function() {
                var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
                ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
                var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
            })();

        </script>

         <!-- HAH -->
        <link rel="stylesheet" href="//www.hangoutsagainsthumanity.net/source/css/HAH.css">

        <html xmlns:ng="http://angularjs.org">
        <head>
            <title>Hangouts Against Humanity</title>
            <meta http-equiv="Content-Type" content="text/html;	charset = iso - 8859 - 1 "/>
        </head>

        <body ng-controller="GameCtrl">
            <div class="HandArea">
                <ul>
                    <li ng-repeat="card in cards.cards">
                        {{$index + 1}}
                        {{card.text}}
                    </li>
                </ul>
            </div>
        </body>

        <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.0.6/angular.min.js"></script>
        <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.0.6/angular-resource.min.js"></script>
        <script src="//www.hangoutsagainsthumanity.net/source/HAH.hangout.js"></script>
        <script src="//www.hangoutsagainsthumanity.net/source/HAH.js"></script>
        </html>
        ]]>
    </Content>
</Module>
